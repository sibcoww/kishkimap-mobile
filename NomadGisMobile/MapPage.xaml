<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="NomadGisMobile.MapPage"
             Title="Карта">

    <Grid x:Name="RootGrid">

        <!-- КАРТА -->
        <mapsui:MapControl x:Name="MapView" />

        <!-- ПОЛУПРОЗРАЧНЫЙ ФОН ПОД КАРТОЧКОЙ -->
        <BoxView x:Name="DimOverlay"
                 BackgroundColor="#80000000"
                 IsVisible="False"
                 Opacity="0">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- КАРТОЧКА-ШАЙБА (BOTTOM SHEET) -->
        <Frame x:Name="PointCard"
               IsVisible="False"
               CornerRadius="24"
               HasShadow="True"
               Padding="16"
               Margin="12,0,12,20"
               BackgroundColor="White"
               VerticalOptions="End"
               TranslationY="320">

            <Grid>
                <Grid.GestureRecognizers>
                    <!-- свайп по карточке -->
                    <PanGestureRecognizer PanUpdated="OnCardPanUpdated" />
                </Grid.GestureRecognizers>

                <VerticalStackLayout Spacing="10">

                    <!-- ГАЛЕРЕЯ КАРТИНОК -->
                    <CollectionView x:Name="PointImagesView"
                                    HeightRequest="180"
                                    IsVisible="False"
                                    ItemsLayout="HorizontalList"
                                    Margin="0,0,0,4">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0"
                                       Margin="0,0,12,0"
                                       CornerRadius="18"
                                       HasShadow="False"
                                       BackgroundColor="#E5E7EB">
                                    <Image Aspect="AspectFill"
                                           Source="{Binding .}" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- НАЗВАНИЕ -->
                    <Label x:Name="PointTitleLabel"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <!-- ОПИСАНИЕ -->
                    <Label x:Name="PointDescriptionLabel"
                           FontSize="14"
                           TextColor="#4B5563" />
                </VerticalStackLayout>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
