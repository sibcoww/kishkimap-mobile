<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NomadGisMobile.AchievementsPage"
             Title="Достижения">

    <ContentPage.Content>
        <Grid Padding="24,24"
              BackgroundColor="#F5F5F8">

            <ScrollView>
                <VerticalStackLayout Spacing="16">

                    <!-- Заголовок -->
                    <Label Text="Достижения"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <!-- Статус / подсказка -->
                    <Label x:Name="StatusLabel"
                           FontSize="14"
                           TextColor="#6B7280" />

                    <!-- Индикатор загрузки -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsVisible="False"
                                       IsRunning="False"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />

                    <!-- Контейнер для карточек ачивок -->
                    <VerticalStackLayout x:Name="AchievementsList"
                                         Spacing="12" />

                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>

</ContentPage>
