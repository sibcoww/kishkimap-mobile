<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NomadGisMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NomadGisMobile">

    <TabBar>
        <ShellContent
            Title="Карта"
            Route="map"
            Icon="map.png"
            ContentTemplate="{DataTemplate local:MapPage}" />

        <ShellContent
            Title="Маршруты"
            Route="routes"
            Icon="routes.png"
            ContentTemplate="{DataTemplate local:RoutesPage}" />

        <ShellContent
            Title="Достижения"
            Route="achievements"
            Icon="achievements.png"
            ContentTemplate="{DataTemplate local:AchievementsPage}" />

        <ShellContent
            Title="Профиль"
            Route="profile"
            Icon="profile.png"
            ContentTemplate="{DataTemplate local:ProfilePage}" />
    </TabBar>

</Shell>
